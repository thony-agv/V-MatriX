{
  "name": "v-matrix",
  "version": "1.0.0",
  "description": "Calculadora CyberPunk de Vectores y Matrices",
  "main": "src/main.js",
  "scripts": {
    "dev": "electron . --dev",
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-portable": "electron-builder --win portable",
    "dist": "electron-builder --publish=never"
  },
  "devDependencies": {
    "electron": "^22.3.27",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.vmatrix.algebra",
    "productName": "V-MatriX",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "css/**/*",
      "js/**/*",
      "index.html",
      "package.json",
      "assets/icon.ico"
    ],
    "win": {
      "target": "portable",
      "icon": "assets/icon.ico"
    },
    "portable": {
      "artifactName": "V-MatriX.exe"
    }
  },
  "author": "V-MatriX",
  "license": "MIT"
}